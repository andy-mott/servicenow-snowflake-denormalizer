# Snowflake connection
SNOWFLAKE_ACCOUNT=your_account.us-east-2.aws
SNOWFLAKE_USER=YOUR_USERNAME
SNOWFLAKE_WAREHOUSE=SNOWFLAKE_CONNECTOR_FOR_SERVICENOW_WAREHOUSE

# Authentication — choose ONE method:

# Option 1: Key pair (recommended for automation / production)
# SNOWFLAKE_PRIVATE_KEY_PATH=/path/to/rsa_key.p8
# SNOWFLAKE_PRIVATE_KEY_PASSPHRASE=optional_passphrase

# Option 2: Password (simple, but won't work if MFA is required)
# SNOWFLAKE_PASSWORD=your_password_here

# Option 3: Browser SSO (interactive — opens browser for MFA/SSO)
# SNOWFLAKE_AUTH_METHOD=browser

# Connector database (where stored procedures live)
CONNECTOR_DATABASE=SNOWFLAKE_CONNECTOR_FOR_SERVICENOW
CONNECTOR_SCHEMA=PUBLIC

# Destination database (where synced data/views live)
DEST_DATABASE=SNOWFLAKE_CONNECTOR_FOR_SERVICENOW_DEST_DB
DEST_SCHEMA=SNOWFLAKE_CONNECTOR_FOR_SERVICENOW_DEST_SCHEMA
